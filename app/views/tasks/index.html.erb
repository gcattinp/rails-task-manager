<h1>My List</h1>
<% @tasks.each do |task| %>
<div>
  <%= check_box_tag 'completed', 1, task.completed, disabled: true %>
  <%= link_to task.title, task_path(task.id) %>
  <%= link_to "delete", task_path(task), data: {turbo_method: :delete} %>
</div>
<% end %>
<%= link_to "Add a task", new_task_path %>
