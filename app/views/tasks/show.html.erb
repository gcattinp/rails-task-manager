<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<div>
<%= check_box_tag 'completed', 1, @task.completed, disabled: true %>
<% if @task.completed %>
<%= "Completed" %>
<% else %>
<%= "Not completed" %>
<% end %>
</div>


<%= link_to "Edit", edit_task_path(@task) %>
<br>
<%= link_to "Back to list", tasks_path %>
